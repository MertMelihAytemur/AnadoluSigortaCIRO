<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.insuranceservice.InsuranceServiceDetailFragment">

    <ImageView
        android:id="@+id/imInsuranceServiceDetailImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/telefonum_guvende"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvInsuranceServiceDetailTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Detail"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@id/imInsuranceServiceDetailImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvInsuranceServiceDetailTopic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvInsuranceServiceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:text="@string/devlet_destekli_tarim_sigortasi_detail"
            android:textAlignment="center"
            android:textSize="21sp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>